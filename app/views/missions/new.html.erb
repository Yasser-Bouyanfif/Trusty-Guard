<% if user_signed_in? %>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Création d'une mission </h3>
        <%= simple_form_for (@mission), data: { controller: 'flatpickr' } do |f| %>
          <%= f.input :start_date, html5: true, :label => "Date de début", as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
          <%= f.input :end_date, html5: true, :label => "Date de fin", as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
          <%= f.input :address, :label => "Adresse postale de la mission" %>
          <%= f.input :number_of_agents, input_html: { min: '0', max: '6'}, :label => "Nombre d'agents requis" %>
          <%= f.input :event_type, :label => "Type d'événement" %>
          <%= f.input :budget, :label => "Budget" %>
          <%= f.input :comment, :label => "Commentaire" %>
          <%= f.submit 'Créer la mission', class: 'btn btn-secondary' %>
        <% end%>
      </div>
    </div>
  </div>
</div>
<% else %>
<%controller.redirect_to new_user_session_path %>
<% end %>
