<section style="background-color: #eee;">
  <div class="container py-5">
<div class="row">
      <div class="col-lg-12">
        <div class="card mb-4">
          <div class="card-body shadow">
            <h3 class="mb-4">Contrat en cours</h3>
            <% @contracts.each do |contract| %>
              <div class="row mb-2">
                <div class="col-sm-4">
                  <p class="font-weight-bold mb-1" style="font-size: .90rem;">N° de contrat</p>
                  <p class="mb-0" style="font-size: .77rem;"><%= contract.mission.id %></p>
                </div>
                <div class="col-sm-4">
                  <p class="font-weight-bold mb-1" style="font-size: .90rem;">Nom de l'agence</p>
                  <p class="mb-0" style="font-size: .77rem;"><%= contract.agent.user.name %></p>
                </div>
              </div>
              <% availability = contract.agent.availabilities.flat_map { |a| a } %>
              <% agent_availability = Availability.where(id: availability.pluck(:id)) %>
              <% agent_availability.each do |a| %>
                <div class="row mb-2">
                  <div class="col-sm-4">
                    <p class="font-weight-bold mb-1" style="font-size: .90rem;">Date de début</p>
                    <p class="mb-0" style="font-size: .77rem;"><%= a.start_date.strftime("%d %b %Y") %></p>
                  </div>
                  <div class="col-sm-4">
                    <p class="font-weight-bold mb-1" style="font-size: .90rem;">Date de fin</p>
                    <p class="mb-0" style="font-size: .77rem;"><%= a.end_date.strftime("%d %b %Y") %></p>
                  </div>

                <div class="col-sm-4">
                  <p class="font-weight-bold mb-1" style="font-size: .90rem;">Agent: <%= contract.agent.first_name %> <%= contract.agent.last_name %></p>
                </div>
                </div>
                <hr>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-lg-12">
        <div class="d-flex justify-content-between">
          <h3>Dernière mission</h3>
          <button type="button" class="btn btn-light mb-2">Voir toutes les missions</button>
        </div>
        <div class="card mb-4">
          <div class="card-body shadow">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">N°</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @mission.id %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Début</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @mission.start_date.strftime("%d %b %Y") %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Fin</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @mission.end_date.strftime("%d %b %Y") %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Type d'événement</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @mission.event_type %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nombre d'agent(s)</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @mission.number_of_agents %></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                                <p class="mb-0">Adresse postale</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @mission.address %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="d-flex justify-content-between">
            <h3>Dernier devis reçu</h3>
            <button type="button" class="btn btn-light mb-2">Voir tous les devis</button>
          </div>
          <div class="card mb-4">
            <div class="card-body shadow">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">N°</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= @estimate.id %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Nom de l'agence</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= @estimate.user.name %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Commentaire</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= @estimate.comment %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
