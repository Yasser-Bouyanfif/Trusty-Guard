<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Créer un agent</h3>
        <%= simple_form_for (@agent) do |f| %>
          <%= f.input :first_name, :label => "Nom" %>
          <%= f.input :last_name, :label => "Prénom" %>
          <%= f.input :birth_date, html5: true, :label => "Date de naissance" %>
          <%= f.input :address, :label => "Adresse postale" %>
          <%= f.input :email, :label => "Adresse e-mail" %>
          <%= f.input :phone_number, :label => "Numéro de téléphone" %>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, :label => "Photo de profil" %>
          <%= f.input :iban %>
          <%= f.submit 'Créer un agent', class: 'btn btn-secondary' %>
        <% end%>
      </div>
    </div>
  </div>
</div>
