<% if user_signed_in? %>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new mission</h3>
        <%= simple_form_for (@mission) do |f| %>
          <%= f.input :start_date, html5: true %>
          <%= f.input :end_date, html5: true %>
          <%= f.input :number_of_agents, input_html: { min: '0', max: '6'} %>
          <%= f.input :event_type, placeholder: 'Event type...' %>
          <%= f.input :budget %>
          <%= f.input :comment, placeholder: 'Let a comment...' %>
          <%= f.submit class: 'btn btn-secondary' %>
        <% end%>
      </div>
    </div>
  </div>
</div>
<% else %>
<%controller.redirect_to new_user_session_path %>
<% end %>
